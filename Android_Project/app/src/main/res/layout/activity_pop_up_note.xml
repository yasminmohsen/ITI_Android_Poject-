<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notePopUp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#D85C01"
    tools:context="view.PopUpNote">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="196dp"
        android:layout_height="76dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/notes"
        android:textColor="@color/quantum_orange50"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <TextView
        android:id="@+id/showNoteText"
        style="@android:style/Widget.TextView"
        android:layout_width="306dp"
        android:layout_height="147dp"
        android:background="#DDC8A4"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/quantum_googyellow900"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>